<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aina.quizzapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="64dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:paddingTop="64dp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:text="Travelling quiz"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/start"
        android:onClick="start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="64dp"
        android:fontFamily="sans-serif"
        android:text="START"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:fontFamily="sans-serif"
        android:padding="64dp"
        android:text="Do you know which country has a 'Stone Forest'? How about the population of European Capitals? Test your world knowledge with this Travelling Quiz!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="italic" />

</RelativeLayout>
